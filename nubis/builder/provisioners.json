{
"provisioners": [
  {
    "type": "shell",
    "inline": [
      "sudo apt update",
      "sudo mkdir -p /var/www/{{user `project_name`}}",
      "sudo chown nubis:nubis /var/www/{{user `project_name`}}"
    ],
    "order": "1"
  },
  {
    "type": "file",
    "source": "./",
    "destination": "/var/www/{{user `project_name`}}",
    "order": "2"
  },
  {
    "type": "shell",
    "inline": [
      "consul-do $(nubis-metadata NUBIS_PROJECT)-$(nubis-metadata NUBIS_ENVIRONMENT)-manage $(hostname) && /opt/${project_name}/venv/bin/python /var/www/${project_name}/manage.py refresh_events"
    ],
    "order": "3"
  }
]
}
